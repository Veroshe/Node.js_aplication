                    <section class="col-md-6 caption">
                        <p> Ilość rozwiązanych zadań</p>
                    </section>
                    <section class="col-md-6">
                        <p> {{user.exercisesdone}}</p>
                    </section>
                    <hr>
                    <section class="col-md-6 caption">
                        <p> Ilość poprawnie rozwiązanych zadań</p>
                    </section>
                    <section class="col-md-6">
                        <p> {{user.exercisespassed}}</p>
                    </section>



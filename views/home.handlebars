<!-- views/home.handlebars -->
{{#if user}}
    <section class="container-fluid user-panel">

        <section class="container-fluid user-name">
            <h3 style="margin:0;">Witaj {{user.username}} </h3>
        </section>

        <section class="user-statics container-fluid">

                <section class="row flex-md-row">
                    <section class="col-md-6 caption">
                        <p> Ilość rozwiązanych testów</p>
                    </section>
                    <section class="col-md-6">
                        <p> {{user.testsdone}}</p>
                    </section>
                    <section class="col-md-6 caption">
                        <p> Ilość poprawnie rozwiązanych testów</p>
                    </section>
                    <section class="col-md-6">
                        <p> {{user.testspassed}}</p>
                    </section>
